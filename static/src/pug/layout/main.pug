include ../utils/mixins
include ../utils/includes
- var pathPrefix = '';
- var title = 'Title';
- var description = 'Description';
- var pageClass = '';
block variables
- function imgPath(path) {return pathPrefix + 'img/'+ path}
//- usage: img(src=imgPath('img.jpg'));

doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv="x-ua-compatible" content="ie=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(content="telephone=no" name="format-detection")
        meta(name="HandheldFriendly" content="true")
        title #{_lara ? _title || title : title}
        meta(name="description" content=description)
        link(rel='stylesheet' href=pathPrefix + 'css/app.css')
        block head

    body.body
        .layout(class=pageClass)
            .layout__header
                block header
            main.layout__main
                block content
            .layout__footer
                +footer()
        block modals


        script(type='text/javascript' src=pathPrefix + 'js/vendors.js')
        script(type='text/javascript' src=pathPrefix + 'js/app.js')
        block script
